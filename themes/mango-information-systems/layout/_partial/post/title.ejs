<!-- begin post.title -->
<% if (post.link){ %>
	
	<h1 itemprop="name">
		<a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %>
		
			<% if (post.subtitle) { %>
				<br><small><%= post.subtitle %></small>
			<% } %>
			
		</a>
	</h1>
<% }
else if (post.title) { %>
	<% if (index){ %>
		
		<% if (post.isOpenSource) { %>
			<span class='badge u-pull-right'>open source</span> 
		<% } %>
		
		<% if (post.status) { %>
			<span class='badge <%- post.status === "new"? "badge-success" : " " %> u-pull-right' style='margin-right: .4rem;'><%- post.status %></span> 
		<% } %>
		
		<h3 itemprop="name">
			<% if (post.status && post.status === 'archived') { %>
				<span class="<%= class_name %>"><%= post.title %></span>
			<% } 
			else { %>
				<a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
			<% } %>
		</h3>
		
		<% if (post.subtitle) { %>
			<p><%- post.subtitle %></p>
		<% } %>
	<% }
} %>
<!-- end post.title -->
