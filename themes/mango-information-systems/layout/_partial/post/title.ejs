<!-- begin post.title -->
<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %>
    <% if (post.subtitle) { %>
	  <br><small><%= post.subtitle %></small>
    <% } %>
    </a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <% if (post.isNew) { %>
	  <span class='badge badge-success u-pull-right'>new</span>
    <% } %>
    <h3 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %>
      </a>
    </h3>
    <% if (post.subtitle) { %>
		<p><%= post.subtitle %></p>
	<% } %>
  <% }
} %>
<!-- end post.title -->
