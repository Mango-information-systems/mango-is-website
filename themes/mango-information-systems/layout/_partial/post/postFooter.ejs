<!-- begin post.postFooter -->
<%
	isIndex = isIndex || false
	
	let articleEndMarker = isIndex? '' : 'id="article-end" '
%>

<div <%- articleEndMarker %>class="postFooter">
	<small>
	  
	<% if (post.categories && post.categories.length && !is_category()){ %>
		Category: 
		<a href="<%- url_for(post.categories.data[0].path) %>"><%- post.categories.data[0].name %></a>. 
	  <% } %>
	  Published by  <%- titlecase(post.author) %>
	  
	  on <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
	  <%= date(post.date, date_format) %></time>
	  
	  <% if(post['last-update'] && !isIndex) { %>
		  , last modified:
		<time datetime="<%= date_xml(post['last-update']) %>"
		  itemprop="dateModified"><%= date(post['last-update'], date_format) %>
		</time>.
	  <% } %>
	
	</small>
</div>
<!-- / post.postFooter -->
