<!-- begin person -->
<div class="row person">

	<div class="columns lg-three lg-offset-by-one
		md-four md-offset-by-zero
		sm-six sm-offset-by-three
		xs-six offset-by-three">

		<%- image_tag(data.image.href, {
			class: 'u-img-responsive u-pull-left profile-photo'
			, alt: data.name
		}) %>

	</div>
	<div class="columns lg-seven md-eight sm-twelve xs-twelve">
		<% if (data.name) { %>

		<h4><%- data.name %>

			<% if (data.title) { %>
			<br><small><%- data.title %></small>
			<% } %>

		</h4>

		<% } %>

		<%- data.bio %>
	</div>

</div>
<!-- /  person -->
