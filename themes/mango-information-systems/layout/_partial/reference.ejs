<!-- begin reference -->
<div class="row reference" itemscope itemtype="http://schema.org/Product">
	<% if (typeof data.href === 'undefined') { %>
		<div class="card twelve columns">
	<% }
	else { %>
		<a href="<%- data.href %>" data-trg="<%- data.trg %>" class="card">
	<% } %>
	
		<div class="row">
			<div class="sm-eight columns">
				<h3 itemprop="name"><%- data.project %> <small><%- data.client %></small></h3>
				<p itemprop="description"><%- data.summary %>
				</p>
			</div>
			<div class="sm-four columns">
				<ul class="list-inline">
					<% _.each(data.domains, function(domain) {
					%>
						<li><span class="tag tag-domain"><%- domain %></span></li>
					<% }) %>
				</ul>
				<ul class="list-inline">
					<% _.each(data.tech, function(tech) {
					%>
						<li itemscope itemtype="http://schema.org/ComputerLanguage"><span class="tag tag-tech" itemprop="name"><%- tech %></span></li>
					<% }) %>
				</ul>
				<ul class="list-inline">
					<% _.each(data.dataTech, function(dataTech) {
					%>
						<li><span class="tag"><%- dataTech %></span></li>
					<% }) %>
				</ul>
			</div>
		</div>
		
		<div class="row" itemprop="review" itemscope itemtype="http://schema.org/Review">
			<div class="columns lg-three lg-offset-by-one
								md-three
								sm-six
								xs-eight">
				<%- image_tag(data.image.href, {
				class: 'u-img-responsive u-pull-left profile-photo'
				, alt: data.image.alt
				}) %>
			</div>

			<div class="columns lg-seven lg-offset-by-one
								md-eight md-offset-by-one
								sm-twelve
								xs-twelve">
				<blockquote itemprop="reviewBody">
					<%- data.quote %>
				</blockquote>
				<cite>
					<span itemprop="author"><%- data.author %></span>, <%- data.authorTitle %>
				</cite>
			</div>
			
		</div>
	
	<% if (typeof data.href === 'undefined') { %>
		</div>
	<% }
	else { %>
		</a>
	<% } %>



</div>
<!-- / reference -->
