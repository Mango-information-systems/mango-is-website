<!-- begin footer-->
<footer>
  <div class="container">
  <div class="row">
    <div class="columns twelve">

        <a rel="home" class="brand" href="<%- url_for() %>" id="logo"><%- image_tag('/img/mango-information-systems-logo-dark.png', {
          alt: config.title
        }) %>
        </a>

    </div>
    <div class="columns six">
      <small>
        <%- partial('company-microdata') %>
      </small>
    </div>
    <div class="columns six">
      <small>
        <ul class="footer-navigation">

          <% for (var link in site.data.menu){
			  
			  var linkClass = site.data.menu[link] + 'index.html' === '/' + page.path ? ' class="active"' : ''
			  
			  %>
              <li>
                <a <%- linkClass %> href="<%- url_for(site.data.menu[link]) %>"><%= link %></a>
              </li>
          <% } %>

        </ul>
      </small>
    </div>
  </div>
</div>
</footer>
<!-- / footer-->
